{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": ".",
      "target": "ES2020",
      "module": "commonjs",
      "typeRoots": [
        "src/@types",
        "./node_modules/@types"
      ],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }